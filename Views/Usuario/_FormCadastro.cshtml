@model Usuario
<div class="row justify-content-md-center">
    <form method="POST" asp-action="Cadastro">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Telefone">Telefone</label>
            <input asp-for="Telefone" class="form-control" required />
        </div>
        <div>
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" required />
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>