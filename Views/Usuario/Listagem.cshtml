@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuarios";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped"> 
            <thead>
                <tr><th>Id</th>
                <th>Login</th>
                <th>Telefone</th>
                <th>Email</th>
                <th></th>
                <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(Usuario u in Model)
                {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Login</td>
                    <td>@u.Telefone</td>
                    <td>@u.Email</td>
                    <td><a href="/Usuario/Edicao/@u.Id">Editar</a></td>
                    <td><a href="/Usuario/Excluir/@u.Id">Excluir</a></td>
                </tr>
                }
            </tbody>
        </table>
        @if(Model.Count <= 0){
            <p>Nenhum registro encontrado</p>
        }
    </div>
</div>